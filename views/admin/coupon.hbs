<section class="mt-5">
    <div class="container d-flex justify-content-center align-items-center">

        <button type="button" class="p-2 w-25 btn text-light mx-5" id="addcategory" data-bs-toggle="modal"
            data-bs-target="#staticBackdrop3">ADD COUPON</button>
        <button type="button" class="p-2 w-25 btn text-light mx-5" id="addcategory" data-bs-toggle="modal"
            data-bs-target="#staticBackdrop">ADD CATEGORY OFFER</button>
        <button type="button" class="p-2 w-25 btn text-light mx-5" id="addcategory" data-bs-toggle="modal"
            data-bs-target="#staticBackdrop2">ADD PRODUCT OFFER</button>
    </div>

</section>
<section class="container">
    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-body">
                    <form action="/admin/add-catOffer" method="post"
                        class="pt-3 d-flex flex-column justify-content-center align-items-center">
                        <div class="d-flex justify-content-center align-items-center main1-3">
                            <span class="span2">ADD CATEGORY OFFER</span>
                        </div>

                        <div class="form-group">
                            <label for="name" class="mt-3 text-dark">SELECT CATEGORY</label><br>
                            <select class="custom-select tm-select-accounts" id="category" name="category">
                                {{#each category}}
                                <option value="{{this._id}}" name="category">{{this.category}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="name" class="mt-3 text-dark">OFFER PERCENTAGE</label>
                            <input type="number" class="form-control " value="" name="offerPercentage" id="" />
                        </div>

                        <span id="submit-error" class="text-white mt-3"></span>
                        <button type="submit" class="btn mt-3 save-info text-dark " onclick="return validateForm()">SAVE
                            INFO</button><br>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</section>

